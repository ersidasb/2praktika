        <Label x:Name="labelName" Content="Vardas" HorizontalAlignment="Left" Margin="719,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelSurname" Content="Pavarde" HorizontalAlignment="Left" Margin="719,41,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonLogout" Content="Atsijungti" HorizontalAlignment="Left" Margin="882,16,0,0" VerticalAlignment="Top" Width="75" Click="buttonLogout_Click"/>
        <Grid x:Name="mainPanelStudents" HorizontalAlignment="Left" Visibility="Visible" Height="561" Margin="10,99,0,0" VerticalAlignment="Top" Width="974">
            <Label Content="Grupė:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <Label Content="Dalykas:" HorizontalAlignment="Left" Margin="244,10,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="comboBoxGroup" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top" Width="120"/>
            <ComboBox x:Name="comboBoxSubject" HorizontalAlignment="Left" Margin="302,10,0,0" VerticalAlignment="Top" Width="217"/>
            <Button x:Name="buttonSearch" Content="Ieškoti" HorizontalAlignment="Left" Margin="591,13,0,0" VerticalAlignment="Top" Width="75" Click="buttonSearch_Click"/>
            <ScrollViewer x:Name="scrollViewerStudents" Visibility="Visible" HorizontalAlignment="Left" Height="459" Margin="46,77,0,0" VerticalAlignment="Top" Width="894">
